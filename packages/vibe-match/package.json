{
  "name": "vibe-match",
  "version": "0.1.0",
  "description": "AI-powered semantic matchers for testing with vitest and jest",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node && bun run build:types",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir ./dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "testing",
    "vitest",
    "jest",
    "ai",
    "semantic",
    "llm",
    "matcher",
    "assertions"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrisjpatty/vibe-match.git"
  },
  "license": "MIT",
  "author": "",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jest": "latest",
    "prettier": "^3.6.2",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.0",
    "@ai-sdk/google": "^1.2.0",
    "@ai-sdk/mistral": "^1.2.0",
    "@ai-sdk/openai": "^1.3.0",
    "@ai-sdk/xai": "^1.2.0",
    "ai": "^4.3.0",
    "zod": "^3.23.8"
  }
}
